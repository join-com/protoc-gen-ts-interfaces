{
  "name": "protoc-gen-ts-interfaces",
  "version": "0.0.1",
  "description": "Protocol Buffers Compiler (protoc) plugin for gerenting interfaces in TypeScript.",
  "author": "JOIN Team",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "build:clean": "rm -rf dist",
    "build": "yarn build:clean && mkdir -p dist/templates && cp -R src/templates/ dist/templates/ && tsc",
    "build:watch": "wr --exec 'yarn build' ./src",
    "test": "jest"
  },
  "bin": {
    "protoc-gen-ts-interfaces": "bin/protoc-gen-ts-interfaces"
  },
  "dependencies": {
    "ejs": "^2.5.7",
    "google-protobuf": "^3.5.0",
    "watch": "^1.0.2",
    "wr": "^1.3.1"
  },
  "devDependencies": {
    "@types/ejs": "^2.3.33",
    "@types/google-protobuf": "^3.2.7",
    "@types/node": "^8.0.54",
    "jest-cli": "^21.2.1",
    "ts-jest": "^21.2.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
